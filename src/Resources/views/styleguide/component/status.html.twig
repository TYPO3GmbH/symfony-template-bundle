{% extends '@Template/styleguide/layout.html.twig' %}
{% block title %}Status{% endblock %}

{% block body %}

    {% frame %}
        <h2>Status</h2>
        <div class="card">
            <div class="card-body">
                {% for color in colors %}
                    <span class="status status-{{ color }}">{{ color|upper }}</span>
                {% endfor %}
            </div>
        </div>
    {% endframe %}

{% endblock %}
