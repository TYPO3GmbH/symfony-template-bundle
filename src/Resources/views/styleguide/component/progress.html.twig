{% extends '@Template/styleguide/layout.html.twig' %}
{% block title %}Progress{% endblock %}

{% block body %}

    {% frame %}
        <h2>Progress</h2>
        <div class="card">
            {% for color in colors %}
            <div class="card-body">
                <div class="progress">
                    <div class="progress-bar progress-type-{{ color }}"
                        role="progressbar"
                        aria-valuenow="75"
                        aria-valuemin="0"
                        aria-valuemax="100"
                        style="width: 75%;">
                        75% {{ color }}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endframe %}

{% endblock %}
